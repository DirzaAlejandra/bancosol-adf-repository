{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-bancosol-dsalazar"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/PL_PRUEBA_FLUJOS')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Pipeline generado para ejemplos de flujos.",
				"activities": [
					{
						"name": "InicioProceso",
						"description": "Marca el inicio de ejecucion",
						"type": "SetVariable",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"variableName": "FechaIni",
							"value": "utcnow()"
						}
					},
					{
						"name": "ObtieneMensaje",
						"description": "Primer Proceso",
						"type": "SetVariable",
						"dependsOn": [
							{
								"activity": "InicioProceso",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"userProperties": [],
						"typeProperties": {
							"variableName": "Mensaje",
							"value": "Estoy en Segundo proceso"
						}
					},
					{
						"name": "EstableceMensaje",
						"description": "Cuando Ocurre exito",
						"type": "SetVariable",
						"dependsOn": [
							{
								"activity": "ObtieneMensaje",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"userProperties": [],
						"typeProperties": {
							"variableName": "EstadoProceso",
							"value": "ok"
						}
					},
					{
						"name": "EstableceMensajeErr",
						"description": "CuandoOcurreError",
						"type": "SetVariable",
						"dependsOn": [
							{
								"activity": "ObtieneMensaje",
								"dependencyConditions": [
									"Failed"
								]
							}
						],
						"userProperties": [],
						"typeProperties": {
							"variableName": "Mensaje",
							"value": "error\n"
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {},
					"cancelAfter": {}
				},
				"variables": {
					"FechaIni": {
						"type": "String",
						"defaultValue": "utcnow()"
					},
					"Mensaje": {
						"type": "String",
						"defaultValue": "EstadoEjecucion"
					},
					"EstadoProceso": {
						"type": "Boolean",
						"defaultValue": true
					}
				},
				"folder": {
					"name": "CLASE01"
				},
				"annotations": []
			},
			"dependsOn": []
		}
	]
}